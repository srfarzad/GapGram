<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.hamidehkefayati.gapgram.EditProfile">

    <include
        android:id="@+id/toolbar_profile"
        layout="@layout/toolbar_edit_profile"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_profile"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile_icon"
                app:civ_border_color="@color/line_toolbar"
                app:civ_border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Change Photo"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textSize="14sp"
                android:textColor="@color/colorText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Name"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textColorHint="@color/textHintPart1"
                android:maxLines="1"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"
                android:layout_marginLeft="-4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Username"
                android:textSize="14sp"
                android:textColor="@color/colorText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Username"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textColorHint="@color/textHintPart1"
                android:maxLines="1"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"
                android:layout_marginLeft="-4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Website"
                android:textSize="14sp"
                android:textColor="@color/colorText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Website"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textColorHint="@color/textHintPart1"
                android:maxLines="1"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"
                android:layout_marginLeft="-4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bio"
                android:textSize="14sp"
                android:textColor="@color/colorText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Bio"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textColorHint="@color/textHintPart1"
                android:maxLines="1"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"
                android:layout_marginLeft="-4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineEditProfile"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try Instagram Business Tools"
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineEditProfile"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Information"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Email Address"
                android:textSize="14sp"
                android:textColor="@color/textEditPart2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Enter your email"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textColorHint="@color/texthintPart2"
                android:maxLines="1"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"
                android:layout_marginLeft="-4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone number"
                android:textSize="14sp"
                android:textColor="@color/textEditPart2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Enter your phone number"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textColorHint="@color/texthintPart2"
                android:maxLines="1"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"
                android:layout_marginLeft="-4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textSize="14sp"
                android:textColor="@color/textEditPart2"/>

            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:entries="@array/gender_arrays"
                android:includeFontPadding="true"
                android:paddingBottom="20dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
